<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddvenderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical"
        android:background="@color/blue"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="24dp"
            android:src="@drawable/component_55_1"
            android:layout_height="24dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Manage Vendors"
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="24dp"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_alignParentRight="true"
            android:layout_height="24dp"
            app:tint="@color/white"></ImageView>
        </RelativeLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/all_contect_bg"
            android:text="My Vendors"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="#212121"
            android:layout_height="40dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/myvendor_recycler"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:ignore="MissingConstraints">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:text="No Vendor Availabe"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginVertical="20sp"
            android:fontFamily="@font/source_sans_pro"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/all_contect_bg"
            android:text="@string/vendors_on_shortbook"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="#212121"
            android:layout_height="40dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/vendor_recycler"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:text="No Vendor Availabe"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginVertical="20sp"
            android:fontFamily="@font/source_sans_pro"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/all_contect_bg"
            android:text="@string/all_contect"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="#212121"
            android:layout_height="40dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/contect_recycler"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:fontFamily="@font/ubuntu_medium"
        android:textStyle="normal"
        android:textSize="14sp"
        android:id="@+id/add_new_vendor"
        android:textColor="#0c1d76"
        android:lineSpacingExtra="0sp"
        android:gravity="center"
        android:background="@color/yallow"
        android:layout_alignParentBottom="true"
       android:text="+ Add New Vendor"
        ></TextView>
</RelativeLayout>